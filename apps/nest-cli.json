{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true
  },
  "projects": {
    ".": {
      "type": "library",
      "root": "libs",
      "entryFile": "index",
      "sourceRoot": "libs/src",
      "compilerOptions": {
        "tsConfigPath": "libs/tsconfig.lib.json"
      }
    },
    "nestjs-flags": {
      "type": "library",
      "root": "libs/nestjs-flags",
      "entryFile": "index",
      "sourceRoot": "libs/nestjs-flags/src",
      "compilerOptions": {
        "tsConfigPath": "libs/nestjs-flags/tsconfig.lib.json"
      }
    }
  }
}
